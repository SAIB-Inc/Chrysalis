<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>

  <Target Name="PreBuild" BeforeTargets="PreBuildEvent">
    <Exec Command="./build-rs.sh" />
  </Target>

  <ItemGroup>
    <None Update="*.so">
      <Pack>true</Pack>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <Link>%(FileName)%(Extension)</Link>
    </None>
  </ItemGroup>

  <ItemGroup>
    <None Update="*.dylib">
      <Pack>true</Pack>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <Link>%(FileName)%(Extension)</Link>
    </None>
  </ItemGroup>

  <ItemGroup>
    <Content Include="lib/libplutus_vm_dotnet_rs.so" Condition="Exists('lib/libplutus_vm_dotnet_rs.so')">
      <Link>libplutus_vm_dotnet_rs.so</Link>
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      <PackageCopyToOutput>true</PackageCopyToOutput>
      <PackagePath>runtimes/linux-x64/native</PackagePath>
      <pack>true</pack>
    </Content>
  </ItemGroup>


  <ItemGroup>
    <Content Include="lib/libplutus_vm_dotnet_rs.dylib" Condition="Exists('lib/libplutus_vm_dotnet_rs.dylib')">
      <Link>libplutus_vm_dotnet_rs.dylib</Link>
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      <PackageCopyToOutput>true</PackageCopyToOutput>
      <PackagePath>runtimes/osx-arm64/native</PackagePath>
      <pack>true</pack>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="../Chrysalis.Wallet/Chrysalis.Wallet.csproj" />
  </ItemGroup>

</Project>
